#!/bin/sh

if [ "$CI" = "true" ] || [ "$NODE_ENV" = "production" ]; then
    echo "CI or production environment, skipping Husky hook"
    exit 0
fi

RESOLVE="$(dirname "$0")/../resolve.js"
BIN="$("$RESOLVE" "@commitlint/cli/cli.js")"
CONFIG="$("$RESOLVE" "@jpapini/commitlint-config")"

. "$(dirname "$0")/_/husky.sh"
"$BIN" --edit "$1" --config "$CONFIG"

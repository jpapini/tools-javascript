#!/bin/sh

if [ "$CI" = "true" ] || [ "$NODE_ENV" = "production" ]; then
    echo "CI or production environment, skipping Husky hook"
    exit 0
fi

RESOLVE="$(dirname "$0")/../resolve.js"
BIN="$(dirname $("$RESOLVE" "lint-staged"))/../bin/lint-staged.js"
CONFIG="$("$RESOLVE" "@jpapini/lint-staged-config")"

. "$(dirname "$0")/_/husky.sh"
"$BIN" --config "$CONFIG"

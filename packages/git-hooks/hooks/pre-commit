#!/bin/sh

if [ "$CI" = "true" ] || [ "$NODE_ENV" = "production" ]; then
    echo "CI or production environment, skipping Husky hook"
    exit 0
fi

SCRIPT_PATH="$(cd -- "$(dirname "$0")" >/dev/null 2>&1; pwd -P)"

. "$SCRIPT_PATH/_/husky.sh"
$SCRIPT_PATH/../node_modules/.bin/lint-staged --config $SCRIPT_PATH/../node_modules/@jpapini/lint-staged-config/index.js
